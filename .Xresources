xterm*dynamicColors: true
xterm*font:     *-fixed-*-*-*-20-*

! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
rofi.color-enabled: true
rofi.color-window: #273238, #273238, #1e2529
rofi.color-normal: #273238, #c1c1c1, #273238, #394249, #ffffff
rofi.color-active: #273238, #80cbc4, #273238, #394249, #80cbc4
rofi.color-urgent: #273238, #ff1844, #273238, #394249, #ff1844

! ------------------------------------------------------------------------------
! urxvt configuration
! ------------------------------------------------------------------------------
urxvt.perl-ext-common:      default,matcher,selection-to-clipboard
urxvt.keysym.M-c:           perl:clipboard:copy
urxvt.keysym.M-v:           perl:clipboard:paste

urxvt.dynamicColors: on
urxvt.xftAntialias: true
urxvt.scrollBar: false
urxvt.scrollBar_right: false

urxvt.url-launcher: /usr/bin/firefox
urxvt.matcher.button: 1
urxvt.underlineURLs: true

! Copy/Paste, same keys as gnome-terminal
! https://stackoverflow.com/questions/39884093
! Disable ISO 14755 unicode input so we can use Ctrl-Shift bindings
URxvt.iso14755:        false
URxvt.iso14755_52:     false

! Disable Ctrl-Alt-c & Ctrl-Alt-v bindings (optional)
URxvt.keysym.C-M-c:    builtin-string:
URxvt.keysym.C-M-v:    builtin-string:

! Bind Ctrl-Shift-c & Ctrl-Shift-v to copy and paste
! I dont know why, but I needed to use hex keysym values to get it to work
URxvt.keysym.C-S-0x43: eval:selection_to_clipboard
URxvt.keysym.C-S-0x56: eval:paste_clipboard

urxvt.keysym.Control-Left:  \033[1;5D
urxvt.keysym.Control-Right: \033[1;5C
URxvt.keysym.Control-l:     command:\033c
! clear the scrollback

!urxvt.letterSpace: -2
urxvt.font:               xft:Source Code Pro:size=9:antialias=true,hinting=true, xft:symbola:size=10:antialias=true:hinting=true
urxvt.boldFont:           xft:Source Code Pro:style=Bold:size=9:style=Bold:antialias=true,hinting=true
urxvt.italicFont:         xft:Source Code Pro:style=Italic:size=9:antialias=true:hinting=true
urxvt.bolditalicFont:     xft:Source Code Pro:style=Bold Italic:size=9:antialias=true:hinting=true

xft.dpi: 192
xft.antialias: true
xft.hinting: true
xft.hintStyle: hintfull

! special
urxvt.depth: 32
urxvt.background:   rgba:0000/0000/0000/c800
!urxvt.background:   rgba:1600/1b00/1d00/ee00
!urxvt.background:   #161b1d
urxvt.foreground:   #7ea2b4
urxvt.cursorColor:  #7ea2b4

! black
urxvt.color0:       #161b1d
urxvt.color8:       #5a7b8c

! red
urxvt.color1:       #d24d72
urxvt.color9:       #d24d72

! green
urxvt.color2:       #568c3b
urxvt.color10:      #568c3b

! yellow
urxvt.color3:       #8a8a0f
urxvt.color11:      #8a8a0f

! blue
urxvt.color4:       #257fad
urxvt.color12:      #257fad

! magenta
urxvt.color5:       #5d5db1
urxvt.color13:      #5d5db1

! cyan
urxvt.color6:       #2d8f6f
urxvt.color14:      #2d8f6f

! white
urxvt.color7:       #7ea2b4
urxvt.color15:      #ebf8ff
